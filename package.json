{
  "name": "codeclash",
  "version": "1.0.0",
  "description": "CodeClash - LeetCode Battles, Real-Time Duels",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules",
    "test": "cd client && npm test && cd ../server && npm test",
    "lint": "cd client && npm run lint && cd ../server && npm run lint",
    "dev": "concurrently \"npm run server\" \"npm run client\" --names \"SERVER,CLIENT\" --prefix name --prefix-colors \"yellow,cyan\""
  },
  "dependencies": {
    "react-router-dom": "^7.7.0",
    "socket.io-client": "^4.8.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "codeclash",
    "leetcode",
    "coding",
    "competition",
    "realtime",
    "react",
    "nodejs"
  ],
  "author": "CodeClash Team",
  "license": "MIT"
}